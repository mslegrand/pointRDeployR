{
  "name": "electron-pointr-deploy",
  "version": "1.0.1",
  "description": "IDE for svgR",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build --linux"
  },
  "build": {
    "appId": "com.electron.sup",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "graphics",
      "icon": "build/icons/icon.icns",
      "forceCodeSigning": false
    },
    "mac": {
      "target": "dmg",
      "category": "graphics",
      "icon": "build/icons/icon.icns",
      "forceCodeSigning": false
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico",
      "forceCodeSigning": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mslegrand/pointRDeployR.git"
  },
  "keywords": [
    "R",
    "graphics",
    "svg",
    "IDE",
    "electron",
    "svgR",
    "pointR"
  ],
  "author": "Mark Stephen Legrand <slegrand3.14@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^4.0.5",
    "electron-builder": "^20.38.5"
  },
  "bugs": {
    "url": "https://github.com/mslegrand/pointRDeployR/issues"
  },
  "homepage": "https://github.com/mslegrand/pointRDeployR#readme"
}
